<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/buttonOpenNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open new Activity" />

        <Button
            android:id="@+id/buttonOpenNewForResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open new Activity for Response" />

        <Button
            android:id="@+id/buttonULR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Url" />

        <Button
            android:id="@+id/buttonGeo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Geo" />

        <Button
            android:id="@+id/buttonCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call 884..." />

        <TextView
            android:id="@+id/textViewIntent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>